<h1>Edit your note below:</h1>
<br>
<form method="post" action="/notes/<%=@note.id %>">
<input type="hidden" name="_method" value="put">
Title: <input type="text" name="note[title]" value="<%=@note.title%>" required="true" >
Topic: <select name="note[topic_id]" required="true">
<% Topic.all.each do |topic| %>
    <option value="<%= topic.id %>"><%=topic.name %>  </option>
    <% end %>
    </select>        
Date: <input type="date" name="note[date]" value="<%=@note.date%>" required="true"><br>
<br>
<p> Content:<br> 
<textarea rows="25" cols ="50" required="true" name="note[content]"><%=@note.content%></textarea><br> <p/>
<input type="submit" value="Update My Note">
</form>